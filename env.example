# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=viewpers

# Basic Authentication
BASIC_AUTH_USERNAME=admin-user
BASIC_AUTH_PASSWORD=your-secure-password

# AI / Sentiment Settings
SENTIMENT_PROVIDER=local # 'local' or 'huggingface'
LOCAL_SENTIMENT_MODEL=daigo/bert-base-japanese-sentiment
LOCAL_SENTIMENT_ENDPOINT=http://localhost:8000/api/sentiment
HUGGINGFACE_API_KEY=

# Database (Vercel Postgres / Supabase)
DATABASE_URL=postgres://user:password@host:5432/dbname
PROTO_DB_URL=
RUNTIME_ALERTS_DB_URL=
RUNTIME_ALERTS_DRIVER=fs # 'fs' or 'db'
RUNTIME_ALERTS_TABLE=proto_runtime_alerts

# Frontend feature flags
NEXT_PUBLIC_USE_DUMMY_ALERTS=1
NEXT_PUBLIC_USE_DB_ALERTS=0

# Node.js environment
NODE_ENV=development

# gcloud認証を使用（gcloud auth application-default login で設定済み）
# サービスアカウントキーファイルは不要
# GOOGLE_APPLICATION_CREDENTIALS は設定しない（gcloud認証を使用）

# 使用方法：
# 1. gcloud auth application-default login を実行
# 2. プロジェクトIDを設定: gcloud config set project viewpers
# 3. 認証情報が ~/.config/gcloud/application_default_credentials.json に保存される 
